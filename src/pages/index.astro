---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ExperienceTimeline from '../components/ExperienceTimeline.astro';
import ProjectCards from '../components/ProjectCards.astro';
import Footer from '../components/Footer.astro';
import StitchDebugger from '../components/StitchDebugger.astro';
import HiddenTerminal from '../components/HiddenTerminal.astro';
import StitchReviewer from '../components/StitchReviewer.astro';
import StitchCopyGuard from '../components/StitchCopyGuard.astro';
import StitchCrash from '../components/StitchCrash.astro';
---

<BaseLayout>
  <Header />
  <main class="max-w-6xl mx-auto px-6 py-12 space-y-24">
    <Hero />
    <ExperienceTimeline />
    <ProjectCards />
  </main>
  <Footer />
  <StitchDebugger />
  <HiddenTerminal />
  <StitchReviewer />
  <StitchCopyGuard />
  <StitchCrash />
</BaseLayout>
